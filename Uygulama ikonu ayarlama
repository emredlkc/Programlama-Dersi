import pygame 
import sys 


pygame.init()

ekran = pygame.display.set_mode((1000,700))

pygame.display.set_caption("FİNAL PROJESİ")

icon = pygame.image.load("icon.png")
pygame.display.set_icon(icon)
running = True

while running:
    ekran.fill((0,0,0))

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running=False
            


